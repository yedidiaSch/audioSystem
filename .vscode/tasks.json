{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Build All",
            "type": "shell", 
            "command": "cmake",
            "args": [
                "--build", "build",
                "--parallel", "4"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["CMake: Configure"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "CMake: Build Console App",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--target", "audioApp",
                "--parallel", "4"
            ],
            "group": "build",
            "dependsOn": ["CMake: Configure"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always", 
                "panel": "new"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "CMake: Build GUI App",
            "type": "shell",
            "command": "cmake", 
            "args": [
                "--build", "build",
                "--target", "audioGUI",
                "--parallel", "4"
            ],
            "group": "build",
            "dependsOn": ["CMake: Configure"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "CMake: Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build", 
                "--target", "clean"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Clean Rebuild",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf", "build"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Console App",
            "type": "shell",
            "command": "./build/bin/audioApp",
            "group": "test",
            "dependsOn": ["CMake: Build Console App"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run GUI App",
            "type": "shell", 
            "command": "./build/bin/audioGUI",
            "group": "test",
            "dependsOn": ["CMake: Build GUI App"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Script: Quick Build",
            "type": "shell",
            "command": "./build.sh",
            "args": ["--release"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build Script: Debug Build",
            "type": "shell",
            "command": "./build.sh", 
            "args": ["--debug"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}