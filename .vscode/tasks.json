{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Audio with RTAudio",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "src/main.cpp",
                "src/audioDevice.cpp",
                "src/audioSystem.cpp",
                "src/Effects/OctaveEffect.cpp",
                "-o",
                "output.elf",
                "-I/home/yedidia/rtaudio/include",
                "-I/home/yedidia/rtaudio",
                "-L/home/yedidia/rtaudio/build",
                "-lrtaudio",
                "-lsndfile",
                "-lstdc++fs",
                "-lpthread",
                "-lasound"
               
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}