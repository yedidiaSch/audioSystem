{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Bin Directory",
            "type": "shell",
            "command": "mkdir -p bin",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Audio Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "-std=c++17",
                "${workspaceFolder}/src/*.cpp",
                "!${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/main_gui.cpp",
                "${workspaceFolder}/src/Midi/*.cpp",
                "${workspaceFolder}/utilities/QueueThread.cpp",
                "${workspaceFolder}/utilities/TimerFd.cpp",
                "${workspaceFolder}/utilities/subject.cpp",
                "${workspaceFolder}/utilities/threadBase.cpp",
                "${workspaceFolder}/src/Effects/*.cpp",
                "${workspaceFolder}/src/Waves/*.cpp",
                "${workspaceFolder}/src/Envelope/*.cpp",
                "${workspaceFolder}/guiBase_cpp/lib/simple_gui.cpp",
                "${workspaceFolder}/guiBase_cpp/src/application.cpp",
                "-o",
                "${workspaceFolder}/bin/audioApp",
                "-I/usr/include/rtaudio",
                "-I/usr/include/rtmidi",
                "-I/usr/include/libxml2",
                "-I${workspaceFolder}/guiBase_cpp/include",
                "-I${workspaceFolder}/guiBase_cpp/external/imgui",
                "-I${workspaceFolder}/guiBase_cpp/external/imgui/backends",
                "-D__LINUX_PULSE__",
                "-D_REENTRANT",
                "-D__UNIX_JACK__",
                "-D__LINUX_ALSA__",
                "-L${workspaceFolder}/guiBase_cpp/build/lib",
                "-lguibase",
                "-L${workspaceFolder}/guiBase_cpp/build",
                "-limgui",
                "-lrtaudio",
                "-lrtmidi",
                "-lxml2",
                "-lasound",
                "-lpthread",
                "-lglfw",
                "-lGL",
                "-ldl"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Create Bin Directory"],
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}