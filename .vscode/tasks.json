{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Bin Directory",
            "type": "shell",
            "command": "mkdir -p bin",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": []
        },

        {
            "label": "Build Console App",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "src/main.cpp",
                "src/ConfigReader.cpp",
                "src/audioSystem.cpp",
                "src/audioDevice.cpp",
                "src/AudioSequencer.cpp",
                "src/AudioSystemAdapter.cpp",
                "src/Midi/*.cpp",
                "src/Effects/*.cpp",
                "src/Waves/*.cpp",
                "src/Envelope/*.cpp",
                "utilities/*.cpp",
                "-I/usr/include/rtmidi",
                "-I/usr/include/rtaudio",
                "-I./src",
                "-I/usr/include/libxml2",
                "-lrtmidi",
                "-lrtaudio",
                "-lxml2",
                "-lasound",
                "-lpthread",
                "-o",
                "bin/audioApp"
            ],
            "group": "build",
            "dependsOn": ["Create Bin Directory"],
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Build GUI App",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "src/main_gui.cpp",
                "src/ConfigReader.cpp",
                "src/audioSystem.cpp",
                "src/audioDevice.cpp",
                "src/AudioSequencer.cpp",
                "src/AudioSystemAdapter.cpp",
                "src/Midi/*.cpp",
                "src/Effects/*.cpp",
                "src/Waves/*.cpp",
                "src/Envelope/*.cpp",
                "utilities/QueueThread.cpp",
                "utilities/TimerFd.cpp",
                "utilities/subject.cpp",
                "utilities/threadBase.cpp",
                "-I./guiBase_cpp/include",
                "-I./src",
                "-I/usr/include/rtmidi",
                "-I/usr/include/rtaudio",
                "-I/usr/include/libxml2",
                "./guiBase_cpp/build/lib/libguibase.a",
                "./guiBase_cpp/build/libimgui.a",
                "-lrtmidi",
                "-lrtaudio",
                "-lxml2",
                "-lasound",
                "-lglfw",
                "-lGL",
                "-lX11",
                "-lXrandr",
                "-lXinerama",
                "-lXcursor",
                "-ldl",
                "-lpthread",
                "-o",
                "bin/audioGUI"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Create Bin Directory"],
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Console App",
            "type": "shell",
            "command": "./bin/audioApp",
            "group": "test",
            "dependsOn": ["Build Console App"],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Run GUI App",
            "type": "shell",
            "command": "./bin/audioGUI", 
            "group": "test",
            "dependsOn": ["Build GUI App"],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}