{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Bin Directory",
            "type": "shell",
            "command": "mkdir -p bin",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Audio Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/Midi/*.cpp",
                "${workspaceFolder}/src/utilities/*.cpp",
                "${workspaceFolder}/src/Effects/*.cpp",
                "-o",
                "${workspaceFolder}/bin/audioApp",
                "-I/usr/include/rtmidi",
                "-I/home/yedidia/rtaudio/include",
                "-I/home/yedidia/rtaudio",
                "-L/home/yedidia/rtaudio/build",
                "-lrtmidi",
                "-lrtaudio",
                "-lasound",
                "-lpthread"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Create Bin Directory"],
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}